<div class="container">

    <div class="row align-middle">

        {{#each beer}}

        <div class="col-md-4">
            <img src="{{image_url}}" class="beer-img-top" alt="{{name}}">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="beer-title">{{name}}</h5>
                <h6 class="beer-tagline">{{tagline}}</h6>
                <p class="beer-description">{{description}}</p>
                <p class="food-pairing"> <b>Food Pairing:</b>{{#each food_pairing}} <li>{{this}}</li>{{/each}}</p>
                <p class="brewers-tips"><b>Brewer tips:</b>{{brewers_tips}}</p>
            </div>
        </div>

        {{/each}}

    </div>

</div>